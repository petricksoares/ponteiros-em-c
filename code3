#include <stdio.h>

int main() {
    float precos[5];
    float *p_precos = precos; 

    printf("Digite os precos de 5 produtos:\n");
    for (int i = 0; i < 5; i++) {
        printf("Produto %d: ", i + 1);
        scanf("%f", (p_precos + i)); 
    }
    
    printf("\nPrecos e Descontos\n");
    for (int i = 0; i < 5; i++) {
        float preco_original = *(p_precos + i); 
        float preco_desconto = preco_original * 0.90; 
        
        printf("Produto %d:\n", i + 1);
        printf("  Preco original: R$ %.2f\n", preco_original);
        printf("  Preco com 10%% de desconto: R$ %.2f\n", preco_desconto);
    }

    return 0;
}
